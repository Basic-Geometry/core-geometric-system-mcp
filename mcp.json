{
  "name": "core-geometric-system-mcp",
  "version": "1.0.2",
  "description": "Exact, self-contained geometric framework grounded in first principles, setting the square and the cube as the primary units for measurement.",
  "main": "server.js",
  "scripts": {
    "start": "node ./server.js",
    "dev": "nodemon ./server.js",
    "test": "node ./test/run-tests.js"
  },
  "author": {
  "name": "Gaál Sándor",
  "email": "gmac4247@yahoo.com",
  "url": "https://basic-geometry.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Basic-Geometry/core-geometric-system-mcp.git"
  },
  "keywords": [
    "Core Geometric System",
    "Exact Geometric Calculations",
    "Computer Graphics",
    "Engineering Solutions",
    "Navigation"
  ],
  "inLanguage": "en",
  "isAccessibleForFree": true,
  "isFamilyFriendly": true,
  "usageInfo": "Using geometric relationships to derive areas and volumes; Applying proportional relationships for accurate calculations",
  "homepage": "https://basic-geometry.github.io",
  "tools": [
    {
      "name": "compute_triangle_area",
      "featureList": "Compute the exact area of a triangle from the length of its sides.",
      "input_schema": {
        "type": "object",
        "name": "triangle",
        "properties": {
          "side1": { "type": "number" },
          "side2": { "type": "number" },
          "side3": { "type": "number" }
        },
        "required": ["side1", "side2", "side3"]
      }
     },
    
    {
      "name": "compute_polygon_area",
      "featureList": "Compute the exact area of a regular polygon from the number and the length of its sides.",
      "input_schema": {
        "type": "object",
        "name": "regularPolygon", 
        "properties": {
          "sideCount": { "type": "integer" },
          "sideLength": { "type": "number" }
        },
        "required": ["sideCount", "sideLength"]
      }
     },
    
    {
  "name": "compute_circle_area",
  "featureList": "Compute the area of a circle from its radius with an exact formula.",
  "input_schema": {
    "type": "object",
    "properties": {
      "radius": {
        "type": "number",
        "exclusiveMinimum": 0,
        "description": "Radius in units (positive number)."
      }
    },
    "required": ["radius"],
    "examples": [
      { "radius": 2.5 }
    ]
  },
  "usageInfo": "circle-area.md"
    },

    {
      "name": "compute_circumference",
     "featureList": "Compute circumference from radius with an exact formula.",
      "input_schema": {
        "type": "object",
        "name": "circle",
        "properties": {
      "radius": {
        "type": "number",
        "exclusiveMinimum": 0,
        "description": "Radius in units (positive number)."
      }
    },
    "required": ["radius"],
    "examples": [
      { "radius": 2.5 }
    ]
  },
  "usageInfo": "circumference.md"
    },
     
    {
      "name": "compute_circle_segment_area_from_height_and_parent_circle_radius",
      "featureList": "Compute the area of a circle segment from its height and the radius of its parent circle using the true area of a circle formula: A=3.2r².",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
      "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius", "height"]
      },
    "usageInfo": "circle-area.md"
     },

    {
      "name": "compute_circle_segment_area_from_height_and_chord_length",
      "featureList": "Compute the area of a circle segment from its height and chord length using the Core Geometric System.",
      "input_schema": {
        "type": "object",
        "properties": {
          "chordLength": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["height", "chordLength"]
      },
      "usageInfo": "circle-area.md"
     },

    {
      "name": "compute_circle_segment_area_from_chord_length_and_parent_circle_radius",
      "featureList": "Compute the area of a circle segment from its chord length and the radius of its parent circle using the Core Geometric System.",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
        "exclusiveMinimum": 0 },
          "chordLength": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius", "chordLength"]
      },
      "usageInfo": "circle-area.md"
     },
    
    {
      "name": "compute_cone_surface_area",
      "featureList": "Compute the exact surface area of a cone from its height and bottom radius, using the Core Geometric System.",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius", "height"]
      },
      "usageInfo": "circle-area.md"
     },
    
    {
      "name": "compute_sphere_volume",
      "featureList": "Compute the volume of a sphere from its radius with an exact formula.",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius"]
      },
      "usageInfo": "sphere-volume.md"
    },

    {
      "name": "compute_spherical_cap_volume",
      "featureList": "Compute approximate spherical cap volume.",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius", "height"]
      },
      "usageInfo": "sphere-volume.md"
     },

    {
      "name": "compute_cone_volume",
      "featureList": "Compute the volume of a cone from its radius and height with an exact formula.",
      "input_schema": {
        "type": "object",
        "properties": {
          "radius": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["radius", "height"]
      },
      "usageInfo": "cone-volume.md"
     },

    {
      "name": "compute_pyramid_volume",
      "featureList": "Compute the volume of a pyramid from its radius and height with an exact formula.",
      "input_schema": {
        "type": "object",
        "properties": {
          "sideCount": { "type": "integer",
        "minimum": 3 },
          "baseEdgeLength": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number" }
        },
        "required": ["sideCount", "baseEdgeLength", "height"]
      },
      "usageInfo": "pyramid-volume.md"
     },
   
    {
      "name": "compute_frustum_pyramid_volume",
      "featureList": "Compute the exact volume of a frustum pyramid from its height and the number and the length of its bottom and top edges, using the Core Geometric System.",
      "input_schema": {
        "type": "object",
        "properties": {
          "sideCount": { "type": "integer",
        "minimum": 0 },
          "baseEdgeLength": { "type": "number",
        "exclusiveMinimum": 0 },
          "topEdgeLength": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number" }
        },
        "required": ["sideCount", "baseEdgeLength", "topEdgeLength", "height"]
      },
      "usageInfo": "pyramid-volume.md"
     },

    {
      "name": "compute_frustum_cone_volume",
      "featureList": "Calculate the exact volume of a frustum cone from its height and its bottom and top radii, using the Core Geometric System.",
      "input_schema": {
        "type": "object",
        "properties": {
          "baseRadius": { "type": "number",
        "exclusiveMinimum": 0 },
          "topRadius": { "type": "number",
        "exclusiveMinimum": 0 },
          "height": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["baseRadius", "topRadius", "height"]
      },
      "usageInfo": "cone-volume.md"
     },
      
    {
      "name": "compute_tetrahedron_volume",
      "featureList": "Compute the exact volume of a tetrahedron from its edge length, using the Core Geometric System (V=edge³/√8).",
      "input_schema": {
        "type": "object",
        "properties": {
          "edge": { "type": "number",
        "exclusiveMinimum": 0 }
        },
        "required": ["edge"]
      },
      "usageInfo": "pyramid-volume.md"
    }
   
  ]
}
